<form class="form email-form">
  
  <div class="to">
    <label for="email-to">To:</label>
    <input class="form-input" type="text" id="email-to" />
  </div>

  <div class="subject">
    <label for="post-subject">Subject:</label>
    <input class="form-input" type="text" id="post-subject" />
  </div>

  <div class="message">
    <label for="post-message">Message:</label>
    <input class="form-input" type="text" id="post-message" />
  </div>

  <div class="form-group">
    <button class="btn btn-primary" type="submit">Send</button>
  </div>
</form>

