<div class="post-list">
  <div class="container">
    {{#each posts as |post|}}
      <div>
        <div class="post-container">
            
        <h1>
          <a href="/post/{{post.id}}">{{post.subject}}</a>
        </h1>
        <h2>{{post.message}}</h2>
        <h2>Post made by:
          {{post.user.name}}
          on
          {{format_date post.date_created}}
          {{format_time post.date_created}}</h2>
          {{#if post.isUsersPost}}
        <div>
            
          <button
            class="btn btn-sm btn-danger"
            data-id="{{post.id}}"
            type="click"
          >DELETE</button>
        </div>
      {{/if}}
        </div>
      </div>

      
    {{/each}}
  
</div>

<script src="js/delPost.js"></script>