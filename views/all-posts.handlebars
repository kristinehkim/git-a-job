<div class="post-list">
    {{#each posts as |post| }}
    <div>
        <h1>
            <a href="/post/{{post.id}}">{{post.subject}}</a>
        </h1>
        <h2>{{post.message}}</h2>
        <h2>Post made by: {{post.user.name}}</h2>
    </div>

    {{#if post.isUsersPost}} 
    <div>
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}" type="click">DELETE</button>
    </div>
    {{/if}} 

    {{/each}}
</div>

<script src="js/delPost.js"></script>