<div class="text-center">
  <h2>{{subject}}</h2>
  <p>{{message}}</p>
  <p>Created by {{user.name}} </p>
  <h2>Comments</h2>
  <ul>
    {{#each comments as |comment|}}
    <li>
      <h3>{{comment.user.name}}</h3>
      <p>{{comment.content}}</p>
      <p>Commented on {{format_date comment.date_created}} {{format_time comment.date_created}}</p>
    </li>
    {{/each}}
  </ul>

  <h2>
    <a class="make-comment no-button" href="/make-comment?postId={{this.id}}" data-user="{{user.name}}" data-reciever="{{user.email}}">Make a Comment</a>
  </h2>
</div>
