<div class="text-center">
  <h2>{{subject}}</h2>
  <p>{{message}}</p>
  <p>Created by {{user.name}} </p>
  {{log user}}
  <h2>Comments</h2>
  <ul>
    {{#each comments as |comment|}}
    <li>
      <h3>{{comment.user.name}}</h3>
      <p>{{comment.content}}</p>
    </li>
    {{/each}}
  </ul>

  <h2>
    <a href="/make-comment?postId={{this.id}}" data-user="{{user.name}}" data-sender="{{user.email}}">Make a Comment</a>
  </h2>
  {{!-- on {{format_date date_created}} --}}
</div>